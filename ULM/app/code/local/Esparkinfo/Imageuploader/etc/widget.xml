<widgets>
    <imageuploader_imageupload_view type="esparkinfo_imageuploader/imageupload_widget_view" translate="name description" module="esparkinfo_imageuploader">
        <name>Imageupload view</name>
        <description>Imageupload view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <imageupload_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Imageupload</label>
                <type>label</type>
                <helper_block>
                    <type>esparkinfo_imageuploader/adminhtml_imageupload_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Imageupload</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>120</sort_order>
            </imageupload_id>
        </parameters>
    </imageuploader_imageupload_view>
    <imageuploader_imageupload_link type="esparkinfo_imageuploader/imageupload_widget_link" translate="name description" module="esparkinfo_imageuploader">
        <name>Imageupload link</name>
        <description>Imageupload link widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <imageupload_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Imageupload</label>
                <type>label</type>
                <helper_block>
                    <type>esparkinfo_imageuploader/adminhtml_imageupload_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Imageupload</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>130</sort_order>
            </imageupload_id>
        </parameters>
    </imageuploader_imageupload_link>
</widgets>
